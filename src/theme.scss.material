// <reference path="../node_modules/@angular/material/_theming.scss" />
@import "~@angular/material/theming";
@include mat-core();

/* ======== Angular material custom themes ======== */
$my-custom-primary: mat-palette($mat-cyan, 800);
$my-custom-accent: mat-palette($mat-teal, 100);
$my-custom-warn: mat-palette($mat-red, 500);

$my-custom-theme: mat-light-theme(
  $my-custom-primary,
  $my-custom-accent,
  $my-custom-warn
);

@include angular-material-theme($my-custom-theme);
